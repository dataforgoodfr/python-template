# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,ipynb}]
indent_size = 4
max_line_length = 96

[*.{js,ts}]
indent_size = 4

[*.{md,mdx}]
max_line_length = off
trim_trailing_whitespace = false

[*.{html,css,yml,yaml,json,toml,tml}]
indent_size = 2
